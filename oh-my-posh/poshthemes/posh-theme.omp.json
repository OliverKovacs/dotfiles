{
    "final_space": true,
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "exit",
                    "style": "plain",
                    "foreground": "green",
                    "properties": {
                        "display_exit_code": true,
                        "error_color": "red",
                        "color_background": false,
                        "prefix": " ",
                        "always_numeric": true
                    }
                },
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "green"
                },
                {
                    "type": "root",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "black",
                    "background": "red",
                    "properties": {
                        "root_icon": "*"
                    }
                },
                {
                    "type": "path",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "black",
                    "background": "lightBlue",
                    "properties": {
                        "style": "full",
                        "folder_separator_icon": "/"
                    }
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "black",
                    "background": "green",
                    "properties": {
                        "display_upstream_icon": true,
                        "status_colors_enabled": true,
                        "local_changes_color": "yellow",
                        "ahead_and_behind_color": "red",
                        "behind_color": "red",
                        "ahead_color": "magenta"
                    }
                }
            ]
        }
    ]
}